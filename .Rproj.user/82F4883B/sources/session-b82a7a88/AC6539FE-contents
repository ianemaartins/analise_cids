#FAIXA ETARIA

#BR

#montar coluna de faixa etaria
dados_br_linhac$FAIXAETA <- cut(dados_br_linhac$IDADE2,
                       breaks = c(-Inf, 12, 17, 30, 60, Inf),
                       labels = c("0-12 anos", "13-17 anos", "18-30 anos", "31-60 anos", "60+ anos"),
                       right = TRUE) #inclusivo a direita (x-y]

#agrupar por faixa etaria
faixaeta.br.linhac <- dados_br_linhac %>%
  group_by(ANOOBITO, FAIXAETA) %>%
  summarise(N.OBITOS = n()) %>%
  ungroup() %>%
  group_by(ANOOBITO) %>%
  mutate(TOTAL_ANO = sum(N.OBITOS)) %>%
  mutate(PERCENTUAL = (N.OBITOS / TOTAL_ANO) * 100) %>%
  as.data.frame()


# Plotar gráfico de séries
series.faixaeta.br.linhac <- ggplot(data = faixaeta.br.linhac, aes(x = ANOOBITO, y = N.OBITOS, color = FAIXAETA)) +
  geom_line(linewidth = 0.5, linetype = "solid") +
  geom_point(shape = 15) +
  labs(title = "Número de óbitos no Brasil por Faixa Etária - variável LINHAC",
       x = "Anos", y = "Óbitos Totais") +
  theme_classic() +
  theme(plot.title = element_text(size = 15))

# Exibir o gráfico
print(series.faixaeta.br.linhac)

#salvar grafico
ggsave(filename = "variavel_linhac/series_faixaeta_br_linhac.png", 
       plot = series.faixaeta.br.linhac)

#plotar grafico de proporção de mortes por faixa etaria a cada ano
proporcao.faixaeta.br.linhac <- ggplot(faixaeta.br.linhac, aes(x = factor(ANOOBITO), y = PERCENTUAL, fill = FAIXAETA)) +
  geom_bar(stat = "identity") +
  labs(x = "Ano", y = "Porcentagem (%)", fill = "Faixa Etária",
       title = "% de Mortes por Psicoativos no Brasil por Faixa Etária e Ano - Variável LINHAC") +
  theme_classic() +
  theme(plot.title = element_text(size = 13),
        axis.text = element_text(size = 15))

# Exibir o gráfico
print(proporcao.faixaeta.br.linhac)

# Salvar gráfico
ggsave(filename = "variavel_linhac/proporcao_faixaeta_br_linhac.png", 
       plot = proporcao.faixaeta.br.linhac)



