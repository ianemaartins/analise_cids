#VARIAVEL LINHAC

#criar pasta para salvar os graficos dessa variavel
dir.create("variavel_linhac")



#--------- SEXO

#BR

# Agrupar dados por sexo e calcular porcentagem
sexo.br.linhac <- dados_br_linhac %>%
  group_by(ANOOBITO, SEXO) %>%
  summarise(N.OBITOS = n()) %>%
  mutate(TOTAL_ANO = sum(N.OBITOS, na.rm = TRUE)) %>%
  mutate(PERCENTUAL = (N.OBITOS / TOTAL_ANO) * 100) %>%
  as.data.frame()



# Plotar gráfico de séries
series.sexo.br.linhac <- ggplot(data = sexo.br.linhac, aes(x = ANOOBITO, y = N.OBITOS, color = SEXO)) +
  geom_line(linewidth = 0.5, linetype = "solid") +
  geom_point(shape = 15) +
  labs(title = "Número de óbitos no Brasil por Sexo - variável LINHAC",
       x = "Anos", y = "Óbitos Totais") +
  theme_classic() +
  theme(plot.title = element_text(size = 15))

# Exibir o gráfico
print(series.sexo.br.linhac)

#salvar grafico
ggsave(filename = "variavel_linhac/series_sexo_br_linhac.png", 
       plot = series.sexo.br.linhac, 
       width = 10, height = 6, dpi = 300)



#plotar grafico de proporção de mortes por sexo a cada ano
proporcao.sexo.br.linhac <- ggplot(sexo.br.linhac, aes(x = factor(ANOOBITO), y = PERCENTUAL, fill = SEXO)) +
  geom_bar(stat = "identity") +
  labs(x = "Ano", y = "Porcentagem (%)", fill = "Sexo",
       title = "% de Mortes por Psicoativos no Brasil por Sexo e Ano - Variável LINHAC") +
  theme_classic() +
  theme(plot.title = element_text(size = 13),
        axis.text = element_text(size = 15))

# Exibir o gráfico
print(proporcao.sexo.br.linhac)

# Salvar gráfico
ggsave(filename = "variavel_linhac/proporcao_sexo_br_linhac.png", 
       plot = proporcao.sexo.br.linhac)



#ES

# Agrupar dados por genero e calcular porcentagem
sexo.es.linhac <- dados_es_linhac %>%
  group_by(ANOOBITO, SEXO) %>%
  summarise(N.OBITOS = n()) %>%
  mutate(TOTAL_ANO = sum(N.OBITOS, na.rm = TRUE)) %>%
  mutate(PERCENTUAL = (N.OBITOS / TOTAL_ANO) * 100) %>%
  as.data.frame()



# Plotar gráfico de séries
series.sexo.es.linhac <- ggplot(data = sexo.es.linhac, aes(x = ANOOBITO, y = N.OBITOS, color = SEXO)) +
  geom_line(linewidth = 0.5, linetype = "solid") +
  geom_point(shape = 15) +
  labs(title = "Número de óbitos no ES por Sexo - variável LINHAC",
       x = "Anos", y = "Óbitos Totais") +
  theme_classic() +
  theme(plot.title = element_text(size = 15))

# Exibir o gráfico
print(series.sexo.es.linhac)

#salvar grafico
ggsave(filename = "variavel_linhac/series_sexo_es_linhac.png", 
       plot = series.sexo.es.linhac)



#plotar grafico de proporção de mortes por sexo a cada ano
proporcao.sexo.es.linhac <- ggplot(sexo.es.linhac, aes(x = factor(ANOOBITO), y = PERCENTUAL, fill = SEXO)) +
  geom_bar(stat = "identity") +
  labs(x = "Ano", y = "Porcentagem (%)", fill = "Sexo",
       title = "% de Mortes por Psicoativos no ES por Sexo e Ano - Variável LINHAC") +
  theme_classic() +
  theme(plot.title = element_text(size = 13),
        axis.text = element_text(size = 15))

# Exibir o gráfico
print(proporcao.sexo.es.linhac)

# Salvar gráfico
ggsave(filename = "variavel_linhac/proporcao_sexo_es_linhac.png", 
       plot = proporcao.sexo.es.linhac)





